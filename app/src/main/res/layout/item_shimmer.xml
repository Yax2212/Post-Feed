<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:background="@color/black">

    <!-- User Info -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <View
            android:id="@+id/shimmerProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_oval"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shimmerProfile"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/shimmerUsername"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:layout_marginBottom="4dp"
                android:background="#EEEEEE" />

            <View
                android:id="@+id/shimmerPostDate"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:background="#EEEEEE" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#EEEEEE"
        android:id="@+id/shimmerImage" />

</LinearLayout>
